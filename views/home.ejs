<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>

<body>
    <%- include('./partials/navbar.ejs')%>
        <div class="container-fluid">
            <div class="row">
                <div class="col col-sm-2 py-4 px-2 border border-top-0 border-right">
                    <input class="form-control form-control-sm" type="text" placeholder="Search">
                    <div class="mt-3 px-3 w-100">
                        <% for( let index=0; index < 20; index++ ) { %>
                            <div class='overflow-hidden mb-1'>
                                <a href="" class='text-decoration-none'>
                                    <h6>aaaaaaaaaaaaaaaddddddddddddddddda</h6>
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="col col-sm-10 px-4">
                    <div class="container py-5">
                        <%- include ('./partials/soundBoardHeader.ejs') -%>
                        <div class="d-grid d-flex justify-content-end gap-2" id='soundBoardOptions'>
                            <button type="button" class="btn btn-primary btn-sm d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#commentsModal">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left-text-fill" viewBox="0 0 16 16">
                                    <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H4.414a1 1 0 0 0-.707.293L.854 15.146A.5.5 0 0 1 0 14.793V2zm3.5 1a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2.5a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2.5a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5z"/>
                                </svg>
                                &nbsp; Comments
                            </button>
                            <button class="btn btn-primary btn-sm d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                </svg>
                                &nbsp; Add to my sound boards
                            </button>
                            <button type="button" class="btn btn-sm btn-primary d-flex align-items-center" data-bs-toggle="modal"
                            data-bs-target="#createCategoryModal">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                    <path d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z"/>
                                </svg>
                                &nbsp; Create category
                            </button>
                            
                        </div>
                        <div id="soundBoardCategories" class="row mt-3" data-masonry='{"percentPosition":true}'>
                            <% for( let index = 0; index < 15; index++ ) { %>
                                <div class="round category mb-4 col-sm-4">
                                    <div class="card rounded border" >
                                      <div class="card-body">
                                        <h5 class="card-title fw-bold text-center">
                                            <a href="" class="text-decoration-none text-dark">
                                                Category Title
                                            </a>
                                        </h5>
                                        <div class="d-flex  flex-wrap justify-content-center d-grid gap-2">
                                            <%     var x = Math.random() * (20 - 1) + 1%>
                                            <% for( let index = 0; index < x; index++ ) { %>
                                                <% var y = Math.floor(Math.random() * (4 - 0) + 0) %>
                                                <% var str = ["Miku noise","Gawr","hello","PEKOPEKOPEKO","NEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEE"]%>
                                                <button class='mb-1 btn btn-light sound btn-sm'><%= str[y] %> </button>
                                            <% } %>
                                        </div>
                                      </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="createCategoryModal" tabindex="-1" aria-labelledby="" aria-hidden="">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header p-3">
                        <h3 class="fw-bolder">
                            Create a category
                        </h3>
                    </div>
                    <form action="/audio/create-category" method="post">
                        <div class="modal-body">
                            <label for="" class="form-label fw-bold">
                                Category
                                Name
                            </label>
                            <input type="text" name="title" class="form-control form-control-sm" id="" placeholder="">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">
                                Close
                            </button>
                            <input class="btn btn-primary btn-sm" type="submit" value="Create" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="commentsModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="commentsModal" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h3 class="modal-title fw-bolder" id="staticBackdropLabel">Comments</h3>
              </div>
              <div class="modal-body">
                <p class='text-muted'>Remember to keep things nice and appropriate. </p>
                <div id="commentsContainer">
                    <% for( let index = 0; index < 15; index++ ) { %>
                        <div class='mb-2'>
                            <h6 class='fw-bold m-0'>Name / Time</h6>
                            <p class='m-0'>Can we please add [insert link here]? Thanks.</p>
                        </div>
                    <% } %>
                </div>
                <div class="">
                    <div class="form-group" id="createCommentContainer">
                        <textarea class="form-control" rows="1" placeholder="Share your thoughts..." id='comment-content' name="content"></textarea>
                        <div class="d-flex flex-row-reverse">
                            <button class="btn btn-sm mt-2 btn-primary" id='commentBtn'>Comment</button>
                        </div>
                    </div>
                </div>
              </div>
               
            </div>
          </div>
        </div>
        
        <%- include('./partials/cdn.ejs')%>
</body>
<script>
    var audio = new Audio()
    var button
    document.querySelectorAll(".sound").forEach(btn => btn.addEventListener("click",(event) => {
        audio.src = "https://www.myinstants.com/media/sounds/miku-miku-uwu.mp3"
        button = event.target
    }))
    audio.oncanplay = () => {
       audio.play()
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"
	integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous"
	async></script>
</html>