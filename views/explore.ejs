<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore</title>
</head>
<body>
    <%- include('./partials/navbar.ejs')%>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-5">
                <h1 class="fw-bolder">Search</h1>
                <p>
                    Searching is slow. Optimization will be done later. Thanks ~
                </p>
                <form action="" method="post" class="row g-3">
                    <div class="col-sm-10">
                        <input class="form-control form-control-sm w-100" type="text" placeholder="ex. sound fx">

                    </div>
                    <div class="col-sm-2">
                        <div class="w-100">
                            <button class="btn btn-primary w-100 btn-sm">
                                  Search
                            </button>
                        </div>
                    </div>
                </form>
                <div id="searchResults" class="py-4">
                    <% for( let index = 0; index < 5; index++ ) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                              <%- include('./partials/soundBoardHeader.ejs',
                              {
                                  "exclude":["date","tags"],
                                  "custom":{
                                      title:"h4"
                                  }
                              })%>
                            </div>
                        </div>
                    <% } %>
                </div>
                <div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                          <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                          </li>
                          <li class="page-item"><a class="page-link" href="#">1</a></li>
                          <li class="page-item"><a class="page-link" href="#">2</a></li>
                          <li class="page-item"><a class="page-link" href="#">3</a></li>
                          <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                          </li>
                        </ul>
                      </nav>
                </div>
            </div>
            <div class="col-md-5">

            </div>
        </div>
    </div>
    <%- include('./partials/cdn.ejs')%>
</body>
</html>