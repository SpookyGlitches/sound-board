<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voice Buttons</title>
</head>
<body class="d-flex h-100 flex-column">
    <nav class="navbar navbar-light  ">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="#">
                <div class="spinner-grow text-danger" id='' role="status">
                </div> 
            </a>
        </div>
      </nav>
      <div class="container my-4">
        <div class="mb-4 ">
            <h2 class="fw-bolder text-danger">Voice Buttons</h2>
            <p class=" mb-4">don't know what to say? just press those buttons! </p>
        </div>
        <div class="bg-secondary w-100 shadow-sm rounded bg-white mb-4" style="height:5px">
            
        </div>
        <div>
            <button type="button" class="btn btn-sm shadow-sm" data-bs-toggle="modal" data-bs-target="#categoryModal">Add category</button>
            <button type="button" class="btn  btn-sm shadow-sm" data-bs-toggle="modal" data-bs-target="#uploadModal">Add voice button</button>

        </div>
        <div class="row mt-3" data-masonry='{"percentPosition": true }'>
            
            <% for(var i = 0; i < array.length; i++) {%>
                <div class="col-sm-6 col-lg-4 mb-4 rounded category ">
                    <div class="card border-0  ">
                        <div class="card-body text-center">
                            <form action="/audio/delete-category" class="d-flex" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                <input type="hidden" name="category_id" value="<%=array[i].category.category_id%>">
                                <button type="submit" class="btn btn-sm m-0 shadow-sm  delete-category" style="visibility: hidden;"> 
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill text-danger " viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                    </svg>
                                </button>
                            </form>
                            
                          <h3 class="card-title fw-bold text-danger"><%= array[i].category.title %></h3>
                          <div class="">
                             <% array[i].audios.forEach(item => { %>
                                <button type="button" class="btn  voice-btn shadow-sm mr-1 mb-1" value="<%= item.file%>">
                                    <%= item.label %>

                                </button>
                              <% }) %>
                          </div>

                        </div>
                    </div>
    
                </div>
            <% } %>
        </div>
      </div>
      <footer class="footer mt-auto ">
        <div class="text-center p-3 text-danger">
            <div onclick="window.location.href='https://github.com'" style="cursor:pointer" >
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-github mb-1" viewBox="0 0 16 16">
                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                </svg>
                <p class="m-0">Contribute here</p>
            </div>
        </div>
      </footer>
      <div class="modal" tabindex="-1" id="uploadModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header p-3">
              <h5 class="modal-title text-danger">Upload Voice Lines</h5>
            </div>
            <form action="/audio" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3 d-flex flex-column">
                        <label for="" class="form-label">Voice Line Text</label>
                        <input type="text" class="form-control form-control-sm" id="" name="label" placeholder="">
                        <small>This will be used as a label for your button when playing the voice line.</small>
                    </div>
                    <div class="mb-3 d-flex flex-column">
                        <label for="" class="form-label">Category</label>
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="category_id">
                            <% categories.forEach(item => { %>
                                <option value="<%=item.category_id%>"><%= item.title %></option>
                            <% }) %>
                        </select>
                        <small>Categorize your voice lines.</small>
                    </div>
                    <div class="mb-3 d-flex flex-column">
                        <label for="" class="form-label">Audio</label>
                        <input class="form-control form-control-sm" id="" name="audio"  type="file">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light shadow-sm btn-sm " data-bs-dismiss="modal">Close</button>
                    <input class="btn btn-light shadow-sm btn-sm " type="submit" value="Submit">
                </div>
            </form>
          </div>
        </div>
      </div>
      <div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="" aria-hidden="">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header p-3">
              <h5 class="modal-title text-danger">Create Category</h5>
            </div>
            <form action="/audio/create-category" method="post">
                <div class="modal-body">
                        <label for="" class="form-label">Category Name</label>
                        <input type="text" class="form-control form-control-sm" id="" placeholder="" name="title">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm  btn-light" data-bs-dismiss="modal">Close</button>
                    <input class="btn btn-primary btn-sm btn-light" type="submit" value="Create">
                </div>
            </form>
          </div>
        </div>
      </div>
</body>
<script src="/static/js/main.js"></script>
