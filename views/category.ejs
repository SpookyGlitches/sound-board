                      <button class='btn btn-sm btn-primary' type="submit">Delete</button>
                      <button class='btn btn-sm btn-primary' aria-label='close' type="button" data-bs-dismiss="modal">Cancel</button>
                  </form>
              </div>
            </div>
          </div>
        </div>
        <div class="modal fade" id="editCategoryModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="editCategoryModal" aria-hidden="true">
