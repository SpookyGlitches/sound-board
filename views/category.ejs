        <div class="modal fade" id="deleteCategoryModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="deleteCategoryModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
