<% if (sboard) { %>
    <div id='' clas='w-100'>

        <p class="fw-bolder <%= custom.title %>">
            <%= sboard.name %>
        </p>
        <div class="row mb-1">
            <div class="col-lg-8">
                <p class="pb-0 mb-0">
                    <%= sboard.description %>
                </p>
            </div>
            <% if (! exclude.includes("date")) { %>
                <div class="col-lg-4 d-flex flex-column align-items-end">
                    <%- include ('./dates.ejs',{created_at: sboard.created_at, updated_at: sboard.updated_at}) -%>
                </div>
                <% } %>
        </div>
        <div class="border-bottom pb-2 mb-2">
            <% if (!exclude.includes("tags")) { %>
                <p>Tags: <%= sboard.tags %>
                </p>
                <% } %>
                    <div class='d-flex align-items-center'>
                        50&nbsp;
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path
                                d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                        </svg>
                    </div>
                    <% if (!exclude.includes("boardOwner")) { %>
                        <small>Created by <%=sboard.user.display_name%></small>
                        <% } %>
        </div>
    </div>
<% } %>